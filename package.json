        "babel-preset-env": "^1.6.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-register": "^6.24.1",
        "babel-runtime": "^6.26.0",
        "brfs": "^1.4.3",
        "classnames": "^2.2.5",
        "commander": "^2.13.0",
        "consolidated-events": "^1.1.1",
